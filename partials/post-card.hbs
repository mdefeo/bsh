{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}
{{#if @first}}
{{!-- Skip first post --}}
{{else}}
    <article class="c-compact-river__entry story-post {{post_class}}{{#match @custom.feed_layout "Classic"}}{{#is "home"}}{{#has index="0"}} post-card-large{{/has}}{{#has index="1,2"}} dynamic{{/has}}{{/is}}{{/match}}{{#match @custom.feed_layout "Grid"}} keep-ratio{{/match}}{{#match @custom.feed_layout "List"}}{{#is "home, paged"}} post-card-large{{/is}}{{/match}}{{#unless access}} post-access-{{visibility}}{{/unless}}">
        <div class="c-entry-box--compact c-entry-box--compact--article">
        {{#if feature_image}}
        <a class="c-entry-box--compact__image-wrapper" href="{{url}}">
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="c-dynamic-image  lazy-image lazy-image lazy-loaded lazy-loaded"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
            />
        </a>
        {{else}}
        <a class="c-entry-box--compact__image-wrapper" href="{{url}}">
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="c-dynamic-image  lazy-image lazy-image lazy-loaded lazy-loaded"
                src="{{asset "img/placeholder.jpg"}}"

                alt="Broad Street Hockey Placeholder Image"
            />
        </a>
        {{/if}}

        <div class="c-entry-box--compact__body">

            <a class="" href="{{url}}">
                <header class="section-title">
                    <h2 class="c-entry-box--compact__title ">
                        {{#unless access}}
                        {{^has visibility="public"}}
                            {{#unless feature_image}}
                                {{> "icons/lock"}}
                            {{/unless}}
                        {{/has}}
                        {{/unless}}
                        {{title}}
                    </h2>
                </header>
                {{#if excerpt}}
                    <div class="p-dek c-entry-box--compact__dek">{{excerpt}}</div>
                {{/if}}
            </a>

            <footer class="">
                <div class="c-byline" data-cid="site/byline-1679439706_6292_48384" data-cdata="{&quot;timestamp&quot;:1679332018}">
                    <span class="c-byline-wrapper"> By 
                        <a href="{{primary_author.url}}">{{primary_author.name}}</a>
                    </span>
                    {{#if @site.comments_enabled}}
                        <span class="c-byline-wrapper article-comments gh-canvas">
                            {{comment_count}}
                        </span>
                    {{/if}}
                    <span class="c-byline__item">
                        <time datetime="{{date format="YYYY-MM-DD HH:mm:ss"}}">{{date}}</time>
                    </span>
                    {{#unless access}}
                    {{^has visibility="public"}}
                        <span class="c-byline__item post-card-access">
                            {{> "icons/lock"}}
                            {{#has visibility="members"}}
                                Members only
                            {{else}}
                                Paid-members only
                            {{/has}}
                        </span>
                    {{/has}}
                    {{/unless}}




                {{#if reading_time}}
                    <span class="c-byline__item post-card-meta-length">{{reading_time}}</span>
                {{/if}}
                {{#if @site.comments_enabled}}
                    <section class="article-comments gh-canvas">
                        <div id="hyvor-talk-view"></div>
                    </section>
                {{/if}}
            </footer>

        </div>

    </article>
{{/if }}
