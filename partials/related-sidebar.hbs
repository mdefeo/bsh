<section class="sticky-top">

    <div class="l-col__sidebar">
        <div class="u-desktop-only"></div>
        <div class="u-desktop-only">
            <aside class="c-rock-list c-rock-list__text">
                {{#if heading}}
                    <h3 class="p-rock-head c-rock-list__title">{{heading}}</h3>
                {{/if}}

                {{#get "posts"}}
                    <div class="c-rock-list__body">
                        <ol class="c-rock-list__items">
                            {{#foreach posts limit="5" filter="id:-{{id}}+tag:{{primary_tag.slug}}"}}
                            <li class="c-rock-list__item">
                                <a href="{{url}}" class="c-rock-list__link">
                                    <div class="c-rock-list__image">
                                    <picture class="c-picture">
                                        {{#if feature_image}}
                                        <a class="c-entry-box--compact__image-wrapper" href="{{url}}">
                                            {{!-- This is a responsive image, it loads different sizes depending on device
                                            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                                            <img class="c-dynamic-image  lazy-image lazy-image lazy-loaded lazy-loaded"
                                                srcset="{{img_url feature_image size="s"}} 300w,
                                                        {{img_url feature_image size="m"}} 600w,
                                                        {{img_url feature_image size="l"}} 1000w,
                                                        {{img_url feature_image size="xl"}} 2000w"
                                                sizes="(max-width: 1000px) 400px, 800px"
                                                src="{{img_url feature_image size="m"}}"
                                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                loading="lazy"
                                            />
                                        </a>
                                        {{else}}
                                        <a class="c-entry-box--compact__image-wrapper" href="{{url}}">
                                            {{!-- This is a responsive image, it loads different sizes depending on device
                                            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                                            <img class="c-dynamic-image  lazy-image lazy-image lazy-loaded lazy-loaded"
                                                src="{{asset "img/placeholder.jpg"}}"

                                                alt="Broad Street Hockey Placeholder Image"
                                            />
                                        </a>
                                        {{/if}}
                                    </picture>
                                    </div>
                                    <span class="c-rock-list__item--body">
                                        <h5><span data-chorus-optimize-field="hed">{{title}}</span></h5>
                                        <span data-chorus-optimize-field="hed">{{excerpt}}</span>
                                        <span class="c-rock-list__entry-blurb">{{excerpt}}</span>
                                    </span>
                                </a>
                            </li>
                            {{/foreach}}
                        </ol>
                    </div>
                {{/get}}
            </aside>
        </div>
    </div>
</section>