{{!< default}}

<section id="team" class="team">
  <div class="container aos-init aos-animate" data-aos="fade-up">
    <div class="section-title">
      <h2>Masthead</h2>
    </div>

    <div class="row"> 
      {{#get 'authors' limit='all' include='count.posts' order='count.posts desc'}}
      <div class="post-feed">
        {{#foreach authors}}
          <div class="col-lg-6 aos-init aos-animate" data-aos="zoom-in" data-aos-delay="100">
            <div class="member d-flex align-items-start">
              {{#if profile_image}}
              <div class="pic">
                <a class="post-card-image-link" href="{{slug}}">
                  <img src="{{profile_image}}" class="img-fluid" alt="{{name}}"></div>
                </a>
              {{/if}}
              <div class="member-info">
                <h4>{{name}}</h4>
                <span>{{location}}</span>
                <p>{{bio}}</p>
                <div class="social">
                  <a href="{{twitter}}"><i class="ri-twitter-fill"></i></a>
                  <a href="{{facebook}}"><i class="ri-facebook-fill"></i></a>
                </div>
              </div>
          </div>
        </div>
        {{/foreach}}
      {{/get}}
      </div>
  </div>
</section>